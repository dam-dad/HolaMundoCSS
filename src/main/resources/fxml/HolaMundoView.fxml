		<TextField fx:id="nombreText" promptText="Introduce un nombre" />
		<HBox spacing="5.0">
			<children>
				<Button id="saludarButton" fx:id="saludarButton" mnemonicParsing="false" onAction="#onSaludarAction" styleClass="botones-negros" text="Saludar" />
				<Button fx:id="despedirButton" mnemonicParsing="false" onAction="#onDespedirAction" text="Despedir" />
			</children>
		</HBox>
		<Label fx:id="saludoLabel" text="Label" />
	</children>
	<padding>
		<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
	</padding>
</VBox>
